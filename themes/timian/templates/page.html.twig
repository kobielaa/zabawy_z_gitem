{% if page.language %}
    <div class="container">{{ page.language }}</div>
{% endif %} 

{% if page.login %}
    {{ page.login }}
{% endif %}
 {% if page.navigation %}
     {{ page.navigation }}
 {% endif %}
<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-10 col-sm-12 push-lg-1">
                <h1 class="page-title">{{ page.title }}</h1>
            </div>
        </div>
    </div>
</header>
<main>

    {{ page.content_tasks }}
    {% if page.upcontent %}
        <article>
            <div class="upcontent container">
                {{ page.upcontent }}
            </div>
        </article>
    {% endif %}
    <article>
        <div class="container">
            {{ page.content }}

        </div>
    </article>
    {% if page.subcontent %}
        <article>
            <div class="subcontent container">
                {{ page.subcontent }}
            </div>
        </article>
    {% endif %}
</main>

{% if page.bottom_content %}
    <aside>
        <div class="container">
            {{ page.bottom_content }}
        </div>
    </aside>
{% endif %}


<!-- Footer -->
<footer>
    <div class="container">
        {% if page.footer_upper %}
            <div class="row">
                <div class="footer-bottom col-lg-12">
                    {{ page.footer_upper }}
                </div>
            </div>
        {% endif %}
        <div class="row">
            {% if page.footer1_content %}
                <div class="footer1-content col-lg-3  d-lg-block">
                    {{ page.footer1_content }}
                </div>
            {% endif %}
            {% if page.footer2_content %}
                <div class="footer2-content col-lg-3  d-lg-block">
                    {{ page.footer2_content }}
                </div>
            {% endif %}
            {% if page.footer3_content %}
                <div class="footer3-content col-lg-3  d-lg-block">
                    {{ page.footer3_content }}
                </div>
            {% endif %}
            {% if page.footer4_content %}
                <div class="footer4-content col-lg-3 col-sm-12">
                    {{ page.footer4_content }}
                </div>
            {% endif %}
        </div>
        {% if page.footer_bottom %}
            <div class="row">
                <div class="footer-bottom col-lg-12  d-lg-block">
                    {{ page.footer_bottom }}
                </div>
            </div>
        {% endif %}
    </div>
</footer>
<div class='loader-wrapper'>
    <div class="loader"></div>
</div>
